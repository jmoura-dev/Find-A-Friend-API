generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  role       Role     @default(MEMBER)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("users")
}

model Orgs {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password        String
  address         String
  whatsapp_number String
  created_at      DateTime @default(now())
  role            Role     @default(MEMBER)

  @@map("orgs")
}

model Pet {
  id         String   @id @default(uuid())
  name       String
  age        String
  breed      String
  size       String
  about      String
  city       String
  avatar_pet String?
  created_at DateTime @default(now())

  @@map("pets")
}

enum Role {
  MEMBER
  ADMIN
}
